
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme (For Safety Panel) -->
    <Color x:Key="DarkThemeBackground">#1C2127</Color>
    <Color x:Key="DarkThemeText">#F5F7FA</Color>
    <Color x:Key="DarkThemeWarning">#F39C12</Color>
    <Color x:Key="DarkThemeDanger">#E74C3C</Color>

    <SolidColorBrush x:Key="DarkThemeBackgroundBrush" Color="{StaticResource DarkThemeBackground}"/>
    <SolidColorBrush x:Key="DarkThemeTextBrush" Color="{StaticResource DarkThemeText}"/>
    <SolidColorBrush x:Key="DarkThemeWarningBrush" Color="{StaticResource DarkThemeWarning}"/>
    <SolidColorBrush x:Key="DarkThemeDangerBrush" Color="{StaticResource DarkThemeDanger}"/>

    <!-- 누락된 브러시 추가 -->
    <Color x:Key="DarkThemeSuccess">#2ECC71</Color>
    <Color x:Key="DarkThemeBorder">#343A40</Color>
    <Color x:Key="DarkThemeSecondaryText">#A0AEC0</Color>
    <SolidColorBrush x:Key="DarkThemeSuccessBrush" Color="{StaticResource DarkThemeSuccess}"/>
    <SolidColorBrush x:Key="DarkThemeBorderBrush" Color="{StaticResource DarkThemeBorder}"/>
    <SolidColorBrush x:Key="DarkThemeSecondaryTextBrush" Color="{StaticResource DarkThemeSecondaryText}"/>

    <Color x:Key="DarkThemeCard">#2D3748</Color>
    <SolidColorBrush x:Key="DarkThemeCardBrush" Color="{StaticResource DarkThemeCard}"/>


    <!-- Light Theme (For Main Content) -->
    <Color x:Key="LightThemeBackground">#F5F7FA</Color>
    <Color x:Key="LightThemeCardBackground">#FFFFFF</Color>
    <Color x:Key="LightThemePrimaryText">#2C3E50</Color>
    <Color x:Key="LightThemeSecondaryText">#8492A6</Color>
    <Color x:Key="LightThemeAccent">#3498DB</Color>
    <Color x:Key="LightThemeAccentDark">#217DBB</Color> <!-- A slightly darker shade for hover states -->
    <Color x:Key="LightThemeSuccess">#2ECC71</Color>
    <Color x:Key="LightThemeBorder">#E0E0E0</Color>

    <!-- Status Colors -->
    <Color x:Key="StatusActive">#2980B9</Color> <!-- A slightly darker blue -->
    <Color x:Key="StatusIdle">#95A5A6</Color>   <!-- A medium gray -->
    <Color x:Key="StatusError">#C0392B</Color>  <!-- A strong red -->
    <Color x:Key="StatusWarning">#F39C12</Color> <!-- An orange for warnings -->

    <SolidColorBrush x:Key="LightThemeBackgroundBrush" Color="{StaticResource LightThemeBackground}"/>
    <SolidColorBrush x:Key="LightThemeCardBackgroundBrush" Color="{StaticResource LightThemeCardBackground}"/>
    <SolidColorBrush x:Key="LightThemePrimaryTextBrush" Color="{StaticResource LightThemePrimaryText}"/>
    <SolidColorBrush x:Key="LightThemeSecondaryTextBrush" Color="{StaticResource LightThemeSecondaryText}"/>
    <SolidColorBrush x:Key="LightThemeAccentBrush" Color="{StaticResource LightThemeAccent}"/>
    <SolidColorBrush x:Key="LightThemeAccentDarkBrush" Color="{StaticResource LightThemeAccentDark}"/>
    <SolidColorBrush x:Key="LightThemeSuccessBrush" Color="{StaticResource LightThemeSuccess}"/>
    <SolidColorBrush x:Key="LightThemeBorderBrush" Color="{StaticResource LightThemeBorder}"/>

    <!-- Status Brushes -->
    <SolidColorBrush x:Key="StatusActiveBrush" Color="{StaticResource StatusActive}"/>
    <SolidColorBrush x:Key="StatusIdleBrush" Color="{StaticResource StatusIdle}"/>
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusError}"/>
    <SolidColorBrush x:Key="StatusWarningBrush" Color="{StaticResource StatusWarning}"/>

</ResourceDictionary>
