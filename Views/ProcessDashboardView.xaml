
<UserControl x:Class="ShipyardDashboard.Views.ProcessDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShipyardDashboard.Views"
             xmlns:vm="clr-namespace:ShipyardDashboard.ViewModels"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:services="clr-namespace:ShipyardDashboard.Services"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ProcessDashboardViewModel}"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="Transparent">
    <UserControl.Resources>

        <!-- #region Converters -->
        <services:ValueGreaterThanConverter x:Key="ValueGreaterThanConverter" />
        <services:MetricFinderConverter x:Key="MetricFinderConverter" />
        <services:SubListConverter x:Key="SubListConverter" />
        <!-- #endregion -->

        <!-- #region Base Metric & Text Styles -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LightThemeSecondaryTextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LightThemePrimaryTextBrush}"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <DataTemplate x:Key="EquipmentGroupCardTemplate">
            <Border Style="{StaticResource CardBorderStyle}" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Group Name and Total Count -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding GroupName, Mode=OneWay}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource LightThemePrimaryTextBrush}"/>
                        <TextBlock Text="{Binding TotalCount, StringFormat='({0}대)', Mode=OneWay}" FontSize="16" Foreground="{StaticResource LightThemeSecondaryTextBrush}" Margin="5,0,0,0" VerticalAlignment="Bottom"/>
                    </StackPanel>

                    <!-- Status Summary (OxyPlot Donut Chart) -->
                    <Grid Grid.Row="1" Margin="0,10,0,10" MinHeight="120">
                        <oxy:PlotView Model="{Binding StatusPlotModel}"/>
                        <TextBlock Text="{Binding TotalCount, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" Foreground="{StaticResource LightThemePrimaryTextBrush}"/>
                    </Grid>

                    <!-- Key Data Summary -->
                    <ItemsControl Grid.Row="2" ItemsSource="{Binding KeyDataSummary}" Margin="0,10,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Foreground="{StaticResource LightThemeSecondaryTextBrush}">
                                        <Run Text="{Binding Key, Mode=OneWay}"/>
                                        <Run Text=": "/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Value, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource LightThemePrimaryTextBrush}" FontSize="14"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Drill-Down Button -->
                    <Button Grid.Row="3" Content="상세 보기" Command="{Binding DataContext.ShowEquipmentDetailsCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" 
                            CommandParameter="{Binding}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <ItemsControl ItemsSource="{Binding EquipmentGroups}" Margin="5">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource EquipmentGroupCardTemplate}" Margin="10" Width="350" Height="350"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
