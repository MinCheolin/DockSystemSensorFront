

<UserControl x:Class="ShipyardDashboard.Views.EquipmentCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:vm="clr-namespace:ShipyardDashboard.ViewModels"
             xmlns:services="clr-namespace:ShipyardDashboard.Services"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:EquipmentCardViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate x:Key="TextTemplate">
            <StackPanel Margin="5,2">
                <TextBlock Text="{Binding Name}" Foreground="{StaticResource LightThemeSecondaryTextBrush}" FontSize="12" />
                <TextBlock Text="{Binding DisplayValue}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource LightThemePrimaryTextBrush}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PlotTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Foreground="{StaticResource LightThemeSecondaryTextBrush}" FontSize="12" />
                <oxy:PlotView Model="{Binding PlotModel}" Margin="5" Height="200"/>
            </StackPanel>
        </DataTemplate>

        <services:MetricTemplateSelector x:Key="MetricSelector"
                                         TextTemplate="{StaticResource TextTemplate}"
                                         PlotTemplate="{StaticResource PlotTemplate}"/>
    </UserControl.Resources>
    <Border Background="{StaticResource LightThemeCardBackgroundBrush}"
            BorderBrush="#EEEEEE"
            BorderThickness="1"
            CornerRadius="8" Margin="5">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" Color="#DDDDDD" Opacity="0.5" BlurRadius="10"/>
        </Border.Effect>
        <DockPanel>
            <!-- Card Header -->
            <StackPanel DockPanel.Dock="Top" Margin="15,15,15,5">
                <TextBlock Text="{Binding Equipment.Name}" FontSize="16" FontWeight="Bold" Foreground="{StaticResource LightThemePrimaryTextBrush}" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Equipment.Status}" FontSize="12" Foreground="{StaticResource LightThemeSuccessBrush}" FontWeight="SemiBold"/>
            </StackPanel>
            
            <Separator DockPanel.Dock="Top" Margin="10,0"/>

            <!-- Main content with plots and text -->
            <ItemsControl ItemsSource="{Binding Metrics}" ItemTemplateSelector="{StaticResource MetricSelector}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DockPanel>
    </Border>
</UserControl>
