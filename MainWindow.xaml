<Window x:Class="ShipyardDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ShipyardDashboard.ViewModels"
        xmlns:views="clr-namespace:ShipyardDashboard.Views"
        xmlns:local="clr-namespace:ShipyardDashboard"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="Shipyard Integrated Dashboard v3.0"
        Width="1600" Height="1000"
        Background="{StaticResource LightThemeBackgroundBrush}">
    <Window.Resources>
        <Style x:Key="ProcessTabItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="{StaticResource LightThemeSecondaryTextBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" Background="Transparent" BorderBrush="Transparent" BorderThickness="0,0,0,3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource LightThemeAccentBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="{StaticResource LightThemePrimaryTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/> <!-- Column 0: New Notification Panel -->
            <ColumnDefinition Width="*"/>   <!-- Column 1: Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Column 0: Integrated Notification & Status Panel (Dark Theme) -->
        <Border Grid.Column="0" Background="{StaticResource DarkThemeBackgroundBrush}" Padding="15">
            <DockPanel>
                <!-- 1. Overall Safety Status Icon -->
                <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,10,0,20">
                    <Path Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1Z" 
                          Width="60" Height="60" 
                          Stretch="Uniform">
                        <Path.Style>
                            <Style TargetType="Path">
                                <Setter Property="Fill" Value="{StaticResource DarkThemeSuccessBrush}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding GlobalAlerts.OverallStatus, Mode=OneWay}" Value="경고">
                                        <Setter Property="Fill" Value="{StaticResource DarkThemeWarningBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding GlobalAlerts.OverallStatus, Mode=OneWay}" Value="위험">
                                        <Setter Property="Fill" Value="{StaticResource DarkThemeDangerBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                    <TextBlock Text="{Binding GlobalAlerts.OverallStatus, Mode=OneWay}" 
                               FontSize="22" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource DarkThemeSuccessBrush}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding GlobalAlerts.OverallStatus, Mode=OneWay}" Value="경고">
                                        <Setter Property="Foreground" Value="{StaticResource DarkThemeWarningBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding GlobalAlerts.OverallStatus, Mode=OneWay}" Value="위험">
                                        <Setter Property="Foreground" Value="{StaticResource DarkThemeDangerBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- 2. Alert Summary -->
                <ItemsControl DockPanel.Dock="Top" ItemsSource="{Binding GlobalAlerts.AlertSummary}" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="10,0">
                                <TextBlock Text="{Binding Key, Converter={StaticResource AlertStatusToIconConverter}, Mode=OneWay}" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Foreground="{Binding Key, Converter={StaticResource AlertStatusToBrushConverter}}"/>
                                <TextBlock Text="{Binding Key, Mode=OneWay}" Foreground="{Binding Key, Converter={StaticResource AlertStatusToBrushConverter}}" FontSize="14" FontWeight="SemiBold" Margin="5,0,2,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Value, Mode=OneWay}" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <Border DockPanel.Dock="Top" Height="1" Background="{StaticResource DarkThemeBorderBrush}" Margin="0,0,0,15"/>

                <!-- 3. Detailed Alert/Log List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding GlobalAlerts.Alerts}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource DarkThemeCardBrush}" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock FontSize="14" FontWeight="Bold" Foreground="{Binding Status, Converter={StaticResource AlertStatusToBrushConverter}, Mode=OneWay}">
                                            <Run Text="{Binding Status, Converter={StaticResource AlertStatusToIconConverter}, Mode=OneWay}" FontFamily="Segoe MDL2 Assets"/>
                                            <Run Text="{Binding AlertType, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Location, Mode=OneWay}" Foreground="{StaticResource DarkThemeSecondaryTextBrush}" FontSize="12" Margin="0,2,0,4"/>
                                        <TextBlock Text="{Binding Message, Mode=OneWay}" Foreground="White" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
        


        <!-- Column 1: Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Row 0: Process Tabs -->
                <RowDefinition Height="*"/>    <!-- Row 1: Main Content -->
            </Grid.RowDefinitions>

            <!-- Row 0: Process Tabs -->
            <Border Grid.Row="0" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="10,0">
                <ListBox ItemsSource="{Binding Processes}" 
                         SelectedItem="{Binding SelectedProcess}"
                         ItemContainerStyle="{StaticResource ProcessTabItemStyle}"
                         BorderThickness="0">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Border>

            <!-- Row 1: Main Content -->
            <ContentControl Grid.Row="1" Margin="5" Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>